<nav aria-label="Page navigation">
    <ul class="pagination">
        <li class="page-item @(1 == ViewBag.Page ? "disabled" : "")">
            <a class="page-link" href="?page=1">First</a>
        </li>
        <li class="page-item @(ViewBag.Page == 1 ? "disabled" : "")">
            <a class="page-link" href="?page=@(ViewBag.Page - 1)">Prev</a>
        </li>

        @for (int i = Math.Max(1, ViewBag.Page - 2); i <= Math.Min(ViewBag.TotalPages, ViewBag.Page + 2); i++)
        {
            <li class="page-item @(i == ViewBag.Page ? "active" : "")">
                <a class="page-link" href="?page=@i">@i</a>
            </li>
        }

        <li class="page-item @(ViewBag.Page == ViewBag.TotalPages ? "disabled" : "")">
            <a class="page-link" href="?page=@(ViewBag.Page + 1)">Next</a>
        </li>
        <li class="page-item @(ViewBag.TotalPages == ViewBag.Page ? "disabled" : "")">
            <a class="page-link" href="?page=@ViewBag.TotalPages">Last</a>
        </li>
    </ul>
</nav>
