@{
    ViewData["Title"] = "Passage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section styles {
    <link rel="stylesheet" href="~/css/col-exp-panel.css" />
}

<h1>Géolocalisation des collaborateurs</h1>
@await Html.PartialAsync("../Shared/_ResearchGeolocation")
<div class="my-container">
    <div class="form-group" style="width:100%">
        <input hidden id="geolocLati" />
        <input hidden id="geolocLongi" />
        <div id="basicMap" class="modalMap"></div>
        <div id="popup" class="ol-popup">
            <a href="#" id="popup-closer" class="ol-popup-closer"></a>
            <div id="popup-content"></div>
        </div>

    </div>
</div>
@section Scripts {
    <script src="~/js/col-exp-panel.js"></script>
    <script src="~/js/ol.js"></script>
    <script src="~/js/geoloc.js"></script>
}